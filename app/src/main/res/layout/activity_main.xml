<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btAndi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/andi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSari"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/sari"
        app:layout_constraintStart_toStartOf="@+id/btAndi"
        app:layout_constraintTop_toBottomOf="@+id/btAndi" />

    <Button
        android:id="@+id/btVita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/vita"
        app:layout_constraintStart_toStartOf="@+id/btSari"
        app:layout_constraintTop_toBottomOf="@+id/btSari" />

    <Button
        android:id="@+id/btJunai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/junai"
        app:layout_constraintEnd_toStartOf="@+id/btAndi"
        app:layout_constraintTop_toBottomOf="@+id/btAndi" />
</androidx.constraintlayout.widget.ConstraintLayout>